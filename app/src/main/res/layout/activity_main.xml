<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_notes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.agrohold.MainActivity">

    <TextView
        android:id="@+id/home_welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7bae37"
        android:fontFamily="@font/tangerine_regular"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="@string/welcome_to_our_app"
        android:textColor="#35374f"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/tv_home_page_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_welcome_text"
        android:layout_margin="8dp"
        android:background="@drawable/roundcorners"
        android:fontFamily="@font/crimson_text_bold_italic"
        android:padding="16dp"
        android:textColor="@color/black"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        tools:text="Home Page" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_home_page_heading"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"
        android:padding="8dp"
        android:text="@string/app_description"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        tools:text="App_Description" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_next_to_season"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="38dp"
        android:backgroundTint="@color/light_green"
        android:contentDescription="@string/next"
        android:elevation="20dp"
        android:gravity="bottom"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        android:text="@string/next"
        app:rippleColor="@color/dark_teal" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_next_to_season2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="38dp"
        android:elevation="20dp"
        android:gravity="bottom"
        android:src="@drawable/note"
        app:rippleColor="@color/dark_teal" />

</RelativeLayout>